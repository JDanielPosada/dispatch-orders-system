@model DispatchOrderSystem.Web.Models.Reports.ClientDistanceReportListViewModel

@{
    ViewData["Title"] = "Reporte por Cliente y Distancia";
}

<div class="card shadow border-0">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="fw-bold mb-0" style="color: #033e5c;">
                <i class="bi bi-bar-chart-line-fill me-2"></i>
                @ViewData["Title"]
            </h4>
            <div class="d-flex gap-2">
                <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left-circle me-1"></i> Volver al inicio
                </a>
                <a href="@Url.Action("ExportClientDistanceToExcel", "Reports")"
                   class="btn btn-outline-success">
                    <i class="bi bi-file-earmark-excel me-1"></i> Exportar a Excel
                </a>
            </div>
        </div>

        @if (Model.ReportData != null && Model.ReportData.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-bordered align-middle text-center">
                    <thead class="table-light">
                        <tr>
                            <th>Cliente</th>
                            <th>1-50 km</th>
                            <th>51-200 km</th>
                            <th>201-500 km</th>
                            <th>501-1000 km</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ReportData)
                        {
                            <tr>
                                <td class="text-start fw-semibold">@item.ClientName</td>
                                <td>@item.Orders_1_50_Km</td>
                                <td>@item.Orders_51_200_Km</td>
                                <td>@item.Orders_201_500_Km</td>
                                <td>@item.Orders_501_1000_Km</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                No hay órdenes registradas aún.
            </div>
        }
    </div>
</div>
