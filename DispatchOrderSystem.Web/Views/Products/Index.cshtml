@model IEnumerable<DispatchOrderSystem.Web.Models.Products.ProductDto>
@{
    ViewData["Title"] = "Productos";
}

<h2 class="text-center mb-4" style="color: #033e5c;">Listado de Productos</h2>

<div class="d-flex justify-content-end mb-3">
    <a asp-action="Create" class="btn btn-primary" style="background-color: #033e5c; border-color: #033e5c;">
        + Nuevo Producto
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No hay productos registrados.
    </div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Nombre</th>
                <th>Descripción</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Description</td>
                </tr>
            }
        </tbody>
    </table>
}