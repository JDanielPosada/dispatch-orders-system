@model IEnumerable<DispatchOrderSystem.Web.Models.Clients.ClientDto>
@{
    ViewData["Title"] = "Clientes";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 style="color: #033e5c;">Clientes</h2>
    <div class="d-flex gap-2">
        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left-circle me-1"></i> Volver al inicio
        </a>
        <a class="btn btn-primary" asp-action="Create" style="background-color: #033e5c; border-color: #033e5c;">
            + Nuevo Cliente
        </a>
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No hay clientes registrados aún.
    </div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Nombre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var client in Model)
            {
                <tr>
                    <td>@client.Name</td>
                </tr>
            }
        </tbody>
    </table>
}