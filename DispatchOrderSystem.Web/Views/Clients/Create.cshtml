@model DispatchOrderSystem.Web.Models.Clients.CreateClientViewModel
@{
    ViewData["Title"] = "Nuevo Cliente";
}

<h2 class="text-center mb-4" style="color: #033e5c;">Registrar Cliente</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create" method="post" class="card p-4 shadow-sm">
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Nombre completo</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-end d-flex gap-2">
                <a asp-action="Index" class="btn btn-outline-secondary ms-2">Cancelar</a>

                <button type="submit" class="btn btn-primary" style="background-color: #033e5c; border-color: #033e5c;">
                    Guardar
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}